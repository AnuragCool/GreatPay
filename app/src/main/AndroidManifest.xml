<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.darkmatter.greatpay">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="com.darkmatter.greatpay.MyFirebaseApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.darkmatter.greatpay.EditProfile"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.darkmatter.greatpay.NotificationActivity"
            android:theme="@style/AppTheme1"
            android:screenOrientation="portrait"/>
        <activity android:name="com.darkmatter.greatpay.AddCollectionActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="com.darkmatter.greatpay.CollectionActivity"
            android:theme="@style/AppTheme1" />
        <activity
            android:name="com.darkmatter.greatpay.MyLoanActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme1" />
        <activity
            android:name="com.darkmatter.greatpay.SummaryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme3" />
        <activity
            android:name="com.theartofdev.edmodo.cropper.CropImageActivity"
            android:theme="@style/Base.Theme.AppCompat" />
        <activity
            android:name="com.darkmatter.greatpay.MyProfile"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2" />
        <activity
            android:name="com.darkmatter.greatpay.AddLoanActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.darkmatter.greatpay.ForgotPassword"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.darkmatter.greatpay.SettingsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.darkmatter.greatpay.AboutUsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2" />
        <activity
            android:name="com.darkmatter.greatpay.HomePage"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2" />
        <activity
            android:name="com.darkmatter.greatpay.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.darkmatter.greatpay.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.darkmatter.greatpay.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme2">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service android:name="com.darkmatter.greatpay.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-3940256099942544~3347511713" />
    </application>

</manifest>