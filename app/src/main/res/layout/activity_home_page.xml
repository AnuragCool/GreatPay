<?xml version="1.0" encoding="utf-8"?>



    <androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context=".HomePage">
        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/appbarLayout"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            >

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/collapsing_toolbar"
                app:expandedTitleTextAppearance="@style/TextAppearance.Design.CollapsingToolbar.Expanded"
                app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Title"
                app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
                app:contentScrim="@color/colorPrimaryDark"
                app:title="Money Tracker">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:scaleType="centerCrop"
                    android:background="@color/colorPrimaryDark"
                    app:layout_collapseMode="parallax"
                    android:fitsSystemWindows="true"
                    />

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:src="@drawable/customlogo"
                    android:transitionName="appImage" />

                <androidx.appcompat.widget.Toolbar
                    android:layout_width="match_parent"
                    android:id="@+id/toolbar"
                    android:layout_height="?attr/actionBarSize"
                    app:popupTheme="@style/ThemeOverlay.AppCompat.Dark">

                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
        </com.google.android.material.appbar.AppBarLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/floataction"
        android:src="@drawable/ic_exit"
        android:tint="#ffffff"
        app:layout_anchor="@id/appbarLayout"
        app:layout_anchorGravity="bottom|right"
        android:backgroundTint="#ffffff"
        android:layout_marginRight="30dp"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryDark"
            android:fillViewport="true"
            android:paddingTop="10dp"

            app:layout_behavior="@string/appbar_scrolling_view_behavior"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/back"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


        <LinearLayout
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"

            android:orientation="horizontal"
            android:gravity="center">


                <LinearLayout
                    android:id="@+id/card5"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/moneys"
                        android:elevation="1dp"
                        android:background="@drawable/shawdow"
                        android:padding="10dp"/>

                    <TextView
                        android:id="@+id/d_new_loan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:shadowColor="#ECECEC"
                        android:shadowDx="0"
                        android:shadowDy="10"
                        android:shadowRadius="2"
                        android:textColor="#777777"
                        android:text="My Loans"
                        android:fontFamily="@font/mont" />


                </LinearLayout>





                <LinearLayout
                    android:id="@+id/card2"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/profile1"
                        android:transitionName="profileImage"
                        android:id="@+id/profile1"
                        android:background="@drawable/shawdow"
                        android:elevation="20dp"
                        android:padding="10dp"/>

                    <TextView
                        android:id="@+id/d_collections"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="#777777"
                        android:shadowColor="#ECECEC"
                        android:shadowDx="0"
                        android:shadowDy="10"
                        android:shadowRadius="2"
                        android:layout_marginTop="10dp"
                        android:text="My Profile"
                        android:fontFamily="@font/mont"/>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        >
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            >

                            <de.hdodenhof.circleimageview.CircleImageView
                                android:layout_width="65dp"
                                android:layout_height="65dp"
                                android:id="@+id/notif"
                                android:background="@drawable/shawdow"
                                android:elevation="10dp"
                                android:src="@drawable/notification"
                                android:padding="10dp"></de.hdodenhof.circleimageview.CircleImageView>

                            <com.nex3z.notificationbadge.NotificationBadge
                                android:layout_width="28dp"
                                android:layout_height="28dp"
                                android:id="@+id/badge"
                                android:layout_alignRight="@+id/notif"
                                android:layout_alignTop="@+id/notif"
                                app:maxTextLength="2"
                                app:badgeBackground="@drawable/badge_bg_with_shadow"
                                >

                            </com.nex3z.notificationbadge.NotificationBadge>

                        </RelativeLayout>


                        <TextView
                            android:id="@+id/d_settings"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:layout_marginTop="10dp"
                            android:text="Notifications"
                            android:textColor="#777777"
                            android:shadowColor="#ECECEC"
                            android:shadowDx="0"
                            android:shadowDy="10"
                            android:shadowRadius="2"
                            android:textSize="15sp"
                            android:fontFamily="@font/mont" />
                    </LinearLayout>


                </LinearLayout>





        </LinearLayout>

        <LinearLayout
            android:clipToPadding="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">



                <LinearLayout
                    android:id="@+id/card4"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/server"
                        android:background="@drawable/shawdow"
                        android:elevation="10dp"
                        android:padding="10dp"/>

                    <TextView
                        android:id="@+id/d_profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#777777"
                        android:textSize="15sp"
                        android:shadowColor="#ECECEC"
                        android:shadowDx="0"
                        android:shadowDy="10"
                        android:shadowRadius="2"
                        android:layout_marginTop="10dp"
                        android:text="Collections"
                        android:fontFamily="@font/mont"/>

                </LinearLayout>



                <LinearLayout
                    android:id="@+id/card1"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/reports"
                        android:background="@drawable/shawdow"
                        android:elevation="10dp"
                        android:padding="10dp"/>

                    <TextView
                        android:id="@+id/d_notify"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="10dp"
                        android:textColor="#777777"
                        android:text="Summary"
                        android:textSize="15sp"
                        android:shadowColor="#ECECEC"
                        android:shadowDx="0"
                        android:shadowDy="10"
                        android:shadowRadius="2"
                        android:fontFamily="@font/mont" />


                </LinearLayout>



                <LinearLayout
                    android:id="@+id/card6"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="150dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="65dp"
                        android:layout_height="65dp"
                        android:src="@drawable/settings"
                        android:background="@drawable/shawdow"
                        android:elevation="10dp"
                        android:padding="10dp"
                        />

                    <TextView
                        android:id="@+id/d_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textColor="#777777"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:shadowColor="#ECECEC"
                        android:shadowDx="0"
                        android:shadowDy="10"
                        android:shadowRadius="2"
                        android:text="Settings"
                        android:fontFamily="@font/mont"/>

                </LinearLayout>
        </LinearLayout>





        </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:elevation="5dp"
                android:background="@drawable/counter_back"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/mont"
                    android:textStyle="bold"
                    android:padding="5dp"
                    android:textColor="@color/white"
                    android:text="Money Counter"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/given_back"
                        android:padding="5dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Given"
                            android:textStyle="bold"
                            android:fontFamily="@font/mont"
                            android:textColor="@color/white"/>
                        <com.daasuu.cat.CountAnimationTextView
                            android:id="@+id/total_given"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"
                            android:text="0"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/collected_back"
                        android:gravity="center"
                        android:padding="5dp"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Total Collected"
                            android:textStyle="bold"
                            android:fontFamily="@font/mont"
                            android:textColor="@color/white"/>
                        <com.daasuu.cat.CountAnimationTextView
                            android:id="@+id/total_collected"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"
                            android:text="0"
                            />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:padding="5dp"
                    android:gravity="center"
                    android:elevation="5dp"
                    android:background="@drawable/invite_back"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/mont"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:text="Invite your friends"/>

                    <Button
                        android:id="@+id/invite"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Invite"

                        android:textColor="@color/colorPrimaryDark"
                        app:backgroundTint="#FFFFFF"
                        app:cornerRadius="20dp"
                        app:iconTint="#C5C5C5"></Button>

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_gravity="center|bottom"
                    android:fontFamily="@font/mont"
                    android:textColor="@color/colorPrimaryDark"

                    android:text="Made with ðŸ’— "/>

